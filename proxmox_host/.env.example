# Proxmox API configuration
PROXMOX_HOST=https://proxmox.example.com:8006
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=your_password
PROXMOX_VERIFY_SSL=true
PROXMOX_NODE_NAME=pve

# AccountDB API configuration
ACCOUNTDB_URL=http://localhost:8080
ACCOUNTDB_API_KEY=your_api_key
ACCOUNTDB_NODE_ID=1

# Application configuration
UPDATE_INTERVAL=300
LOG_LEVEL=INFO
DEBUG=false

# Log forwarding configuration
LOG_FORWARDING_ENABLED=true
LOG_FORWARDING_LEVEL=INFO
LOG_BATCH_SIZE=10
LOG_FLUSH_INTERVAL=60
