#
## -- API Config -- #
#

# Frontend configuration
NEXT_PUBLIC_API_URL=http://localhost:8084   # << Put frontend host ipv4 if accessing from other devices on network

# API configuration
API_HOST=0.0.0.0
API_PORT=8080
API_DEBUG=False

# Security tokens
X_TOKEN=CHANGEME  # Used for API authentication
API_TOKEN=CHANGEME  # Used for API authentication

# CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:8084   # Comma-separated list of allowed origins

#
## -- Postgres Config -- #
#

# Database connection parameters
PG_HOST=postgres
PG_PORT=5432
PG_USER=acc_user
PG_PASSWORD=CHANGEME
SU_USER=postgres
SU_PASSWORD=CHANGEME_ULTRASECURE

#
## -- Authentication Config -- #
#

# JWT configuration
JWT_SECRET_KEY=your-secure-secret-key-change-this-in-production  # Change this to a secure random string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# User registration
SIGNUPS_ENABLED=true  # Set to false to disable new user registrations

#
## -- Logging Config -- #
#

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

#
## -- Other Config -- #
#

# WhoDB configuration
WHODB_PORT=8081